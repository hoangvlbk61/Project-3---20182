                <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="" method="POST">
                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first_name"> Mã data:
                    </label>
                    <label class="control-label col-md-6 col-sm-3 col-xs-12" for="first_name">
                      <center><%=data.id%> </center>
                    </label>
                  </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first_name"> Họ:
                    </label>
                    <label class="control-label col-md-6 col-sm-3 col-xs-12" for="first_name">
                        <center><%=data.firstname%> </center>
                    </label>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first_name"> Tên:
                    </label>
                    <label class="control-label col-md-6 col-sm-3 col-xs-12" for="first_name">
                        <center><%=data.lastname%> </center>
                    </label>
                </div>
                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first_name"> Email:
                    </label>
                    <label class="control-label col-md-6 col-sm-3 col-xs-12" for="first_name">
                      <center><%=data.email%> </center>
                    </label>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first_name"> Số điện thoại:
                    </label>
                    <label class="control-label col-md-6 col-sm-3 col-xs-12" for="first_name">
                      <center><%=data.phonenumber%> </center>
                    </label>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first_name"> Nơi làm việc:
                    </label>
                    <label class="control-label col-md-6 col-sm-3 col-xs-12" for="first_name">
                      <center> <%=data.workplace%></center>
                    </label>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first_name"> Danh tiếng:
                    </label>
                    <label class="control-label col-md-6 col-sm-3 col-xs-12" for="first_name">
                      <center> <%=data.reputation%> </center>
                    </label>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first_name"> Đăng nhập lần cuối:
                    </label>
                    <label class="control-label col-md-6 col-sm-3 col-xs-12" for="first_name">
                      <center> <%=data.last_login.getDate() + "/" + (data.last_login.getMonth()+1) + "/"+ data.last_login.getFullYear() %></center>
                    </label>
                  </div>

                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first_name"> Là quản trị viên:
                    </label>
                    <label class="control-label col-md-6 col-sm-3 col-xs-12" for="first_name">
                      <center>
                        <% if(data.is_admin ) {%>  
                          Yes 
                        <% } else { %>
                          No 
                        <% } %>
                      </center>
                    </label>
                  </div>

                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first_name"> Còn hoạt động:
                    </label>
                    <label class="control-label col-md-6 col-sm-3 col-xs-12" for="first_name">
                      <center>
                        <% if(data.is_active ) {%>
                          Yes 
                        <% } else { %>
                          No 
                        <% } %>
                      </center>
                    </label>
                  </div>

                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first_name"> Ngày tham gia:
                    </label>
                    <label class="control-label col-md-6 col-sm-3 col-xs-12" for="first_name">
                      <center><%=data.date_joined.getDate() + "/" + (data.date_joined.getMonth()+1) + "/"+ data.date_joined.getFullYear() %> </center>
                    </label>
                  </div>
                  <div class="ln_solid"></div>
                </form>
