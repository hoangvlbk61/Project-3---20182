<% include ./template/main_header %>
<% include ./template/main_top_navigation %>
      <!-- /top navigation -->

      <!-- page content -->
      <div class="right_col" role="main">
        <!-- top tiles -->
        <div class="row tile_count">
          
        </div>
        <!-- /top tiles -->

        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            
            <div class="x_panel">
              <div class="x_title">
                <h2 class="title"> <b> Thay đổi thông tin đề thi: <%=writing.name%>  </b></h2>
                <div class="clearfix"></div>
              </div>
              <div class="x_content">
                <br />
                <form class="form-horizontal form-label-left" action="" method="POST">
                  <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="username"> Types<span class="required">*</span>
                    </label>
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="username"> Writing
                    </label>
                  </div>
                  <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" > Name <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <input id="content" class="form-control col-md-7 col-xs-12" rows="10"
                      value="<%=writing.name%>" name="name" required="required" type="text"/> 
                    </div>
                  </div>
                  <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" > Content<span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <textarea id="content" class="form-control col-md-7 col-xs-12" rows="10" 
                      name="content" required="required" type="text"> <%=writing.content%> </textarea>
                    </div>
                  </div>
                  <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" > Explanation<span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <textarea id="content" class="form-control col-md-7 col-xs-12" rows="10" name="explanation" 
                       required="required" type="text"> <%=writing.explanation%> </textarea>
                    </div>
                  </div>
            
                  <div class="ln_solid"></div>
                  <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
                      <button class="btn btn-primary" type="button"><a href="." style="color:white ">Cancel</a> </button>
                      <button class="btn btn-primary" type="reset"><a style="color:white ">Reset</a></button>
                      <button type="submit" class="btn btn-success"><a style="color:white ">Save and back</a> </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>

          </div>

        </div>
        <br />





      </div>
      <!-- /page content -->

