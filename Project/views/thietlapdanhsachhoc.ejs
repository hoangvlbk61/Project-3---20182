<% include ./template/main_header %>
<% include ./template/main_top_navigation %>
        <!-- page content -->
        <div class="right_col" role="main">
          <div class="">
            <div class="page-title">
              <div class="title_left">
                <h3>Thiết lập danh sách học</h3>
              </div>
              <div class="title_right">
                <div class="col-md-9 col-sm-12 col-xs-12 form-group pull-center top_search">
                  <div class="input-group">
                    <input type="text" class="form-control" id="search_query" placeholder="Search for...">
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Search !</button>
                    </span>
                  </div>
                  <%if(typeof query_list !== "undefined"){%>
                  <%query_list.forEach((q) => {%>
                  <div class="input-group">
                    <input type="text" class="form-control" value="<%=q.word%>" disabled>
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Thêm !</button>
                    </span>
                  </div>
                  <%})%>
                  <%}%>
                  
                </div>
              </div>
            </div>
            
            <div class="clearfix"></div>

            <div class="row">
              <div class="col-md-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2> Hôm nay </h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                          <li><a href="#">Settings 1</a>
                          </li>
                          <li><a href="#">Settings 2</a>
                          </li>
                        </ul>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">

                    <!-- start project list -->
                    <table class="table table-striped projects">
                      <thead>
                        <tr>
                          <th style="width: 1%">#</th>
                          <th style="width: 10%">Từ </th>
                          <th style="width: 10%">Nghĩa</th>
                          <th style="width: 15%">Từ đồng nghĩa</th>
                          <th style="width: 25%">Ví dụ</th>
                        </tr>
                      </thead>
                      <tbody>
                      <%var vlist =data.list_vocab%>
                      <%vlist.forEach( (vocab) =>{ %>
                        <tr>
                          <td><%=vocab._id%></td>
                          <td>
                            <%=vocab.word%>
                          </td>
                          <td>
                            <%=vocab.meaning%>
                          </td>
                          <td>
                            <%=vocab.synonyms%>
                          </td>
                          <td>
                              <%=vocab.examples%>
                          </td>
                        </tr>
                      <% }) %>
                        

                        
                      </tbody>
                    </table>
                    
                    <!-- end project list -->

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <script>
          document.getElementById("search_query").addEventListener("change", queryfunction); 
          function queryfunction() {
            var x = document.getElementById("search_query");
            var sUrl = "/thietlapdanhsachhoc/" + x.value ; 
            window.location = sUrl ; 
          }
        </script>
        <!-- /page content -->

        <!-- footer content -->
<% include ./template/main_footer %>