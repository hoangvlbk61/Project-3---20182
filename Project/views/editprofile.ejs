<% include ./template/main_header3 %>
<% include ./template/main_top_navigation3 %>
<!-- page content -->
<div class="right_col" role="main">
  <!-- top tiles -->
  <div class="row tile_count">

  </div>
  <!-- /top tiles -->

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">

      <div class="x_panel">
        <div class="x_title">
          <h2 class="title"> <b> Cập nhật thông tin cá nhân: <%=user.firstname + " " + user.lastname%> </b></h2>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <br />
          <form class="form-horizontal form-label-left" action="" method="POST">
            
            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="occupation"> Nơi làm việc <span
                  class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <input id="occupation" type="text" name="workplace" data-validate-length-range="5,200"
                  data-validate-words="1,15" class="optional form-control col-md-7 col-xs-12"
                  value="<%=data.workplace%>">
              </div>
            </div>

            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="telephone">Số điện thoại <span
                  class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <input type="tel" id="telephone" name="phonenumber" required="required"
                  data-validate-length-range="10,14" class="form-control col-md-7 col-xs-12"
                  value="<%=data.phonenumber%>">
              </div>
            </div>

            <div class="ln_solid"></div>
            <div class="form-group">
              <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
                <button class="btn btn-primary" type="button"><a href="." style="color:white ">Cancel</a> </button>
                <button class="btn btn-primary" type="reset"><a style="color:white ">Reset</a></button>
                <button type="submit" class="btn btn-success"><a style="color:white ">Save and back</a> </button>
              </div>
            </div>
          </form>
        </div>
      </div>

    </div>

  </div>
  <br />





</div>
<!-- /page content -->

<!-- footer content -->
<% include ./template/main_footer3 %>